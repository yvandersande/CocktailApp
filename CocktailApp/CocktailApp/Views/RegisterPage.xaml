<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CocktailApp.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Spacing="10">
            <StackLayout>
                <Label  Text="Cocktail App" 
                        HorizontalOptions="Center"
                        Margin="0, 10, 0, 0"
                        FontSize="30"/>
                <Entry  x:Name="registerUsername"
                        Placeholder="Username"
                        Margin="50, 0"/>
                <Entry  x:Name="registerFullName"
                        Placeholder="Full Name"
                        Margin="50, 0"/>
                <Entry  x:Name="registerPassword"
                        Placeholder="Password"
                        IsPassword="True" 
                        Margin="50, 0"/>
                <StackLayout Margin="50, 0">
                    <Label Text="Date of Birth"/>
                    <DatePicker x:Name="registerDateOfBirth"></DatePicker>
                </StackLayout>
                <Button x:Name="btnSaveUser"
                        Text="register"
                        Margin="50, 0"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>